<?xml version="1.0" encoding="UTF-8"?>
<!--
	=====================================================================================
	DECADENCE TILESETS FILE
	Defines one or more tilesets for use with the Decadence tile scrolling engine.
	=====================================================================================
	id						The unique resource ID of the tileset.
	tileWidth				The width of a tile used in the tileset.
	tileHeight				The height of a tile used in the tileset.
	startTile				Can be used to determine at which tile on the associated
							tile image this tileset starts counting from. This can be
							used for tilesets that share the same image for their tiles.
	tileGap					Can be used to determine a gap between tiles on the
							tileset source image.
	transparent				Determines if the tileset bitmap is transparent. This is
							used when using a transparent PNG image for the tileset.
	bgColor					The background color of the tileset (TODO: Needs explanation!)
	imageID					ID of the image resource which contains the tiles.
	=====================================================================================
	propertyDefinitions		Defines properties that can be used as global- and tile-
							properties. This is like a pool to that any arbitrary tile
							property or global property has access to and can reference
							the property definitions by their ID.
	=====================================================================================
	globalProperties		Global properties are properties that affect every tile in
							the tileset. These are applied to every tile in the tileset
							automatically.
	=====================================================================================
	tiles					The list of tile definitions. Every tile has a unique ID
							which is the number of the tile rectangle on the used tileset
							image. Any tile can have a set of properties whose ID refers
							to the property definition (see propertyDefinitions) which
							it reflects. Animated tiles have an additional frameCount
							atribute which determines how many frames the animation
							uses.
	=====================================================================================
-->
<tilesets>
	
	<tileset
		id="testTileSet"
		transparent="false"
		bgColor="0xFF00FF"
		imageID="testTileSetImage">
		
		<meta>
			<notes><![CDATA[]]></notes>
			<author><![CDATA[]]></author>
			<tags><![CDATA[]]></tags>
		</meta>
		
		<propertyDefinitions>
			<property id="0" name="name" defaultValue=""/>
			<property id="1" name="isSolid" defaultValue="false"/>
			<property id="2" name="isDiggable" defaultValue="false"/>
			<property id="3" name="isCollectable" defaultValue="false"/>
			<property id="4" name="isDestructable" defaultValue="false"/>
			<property id="5" name="hasGravity" defaultValue="false"/>
			<property id="6" name="scoreValue" defaultValue="0"/>
		</propertyDefinitions>
		
		<globalProperties>
			<property id="0" value="A simple tileset used for testing Decadence."/>
		</globalProperties>
		
		<tiles>
			<tile id="tile1" x="0" y="0" width="96" height="96">
				<properties>
					<property id="0" value="96x96 Square Tile"/>
					<property id="1" value="true"/>
				</properties>
			</tile>
			<tile id="tile2" x="96" y="0" width="64" height="64">
				<properties>
					<property id="0" value="64x64 Square Tile"/>
					<property id="1" value="true"/>
				</properties>
			</tile>
			<tile id="tile3" x="160" y="0" width="16" height="64">
				<properties>
					<property id="0" value="16x64 Vertical Bar tile"/>
					<property id="1" value="true"/>
				</properties>
			</tile>
			<tile id="tile4" x="176" y="0" width="64" height="16">
				<properties>
					<property id="0" value="64x16 Horizontal Bar Tile"/>
					<property id="1" value="true"/>
				</properties>
			</tile>
			<tile id="tile5" x="240" y="0" width="32" height="32">
				<properties>
					<property id="0" value="32x32 Square Tile"/>
					<property id="1" value="true"/>
				</properties>
			</tile>
			<tile id="tile6" x="272" y="0" width="16" height="16">
				<properties>
					<property id="0" value="16x16 Square Tile"/>
					<property id="1" value="true"/>
				</properties>
			</tile>
			<tile id="tile7" copyOf="tile5">
				<properties>
					<property id="0" value="A virtual copy of tile5"/>
					<property id="1" value="false"/>
				</properties>
			</tile>
		</tiles>
		
		<animTiles>
			<tile id="tile8">
				<properties>
					<property id="0" value="Animated Tile"/>
					<property id="1" value="false"/>
				</properties>
				<frames>
					<frame nr="1" x="0" y="0" width="96" height="96"/>
					<frame nr="2" x="96" y="0" width="96" height="96"/>
				</frames>
			</tile>
			<tile id="tile9" copyOf="tile8">
				<properties>
					<property id="0" value="A virtual copy of an animated tile"/>
					<property id="1" value="true"/>
				</properties>
			</tile>
		</animTiles>
		
		<tileGroups>
			<group id="1" width="32" height="32">
				<properties>
					<property id="0" value="32x32 Block"/>
					<property id="1" value="true"/>
				</properties>
				<tiles>
					<tile id="tile6" x="0" y="0"/>
					<tile id="tile6" x="16" y="0"/>
					<tile id="tile6" x="0" y="16"/>
					<tile id="tile6" x="16" y="16"/>
				</tiles>
			</group>
			<group id="2" width="128" height="16">
				<properties>
					<property id="0" value="128x16 Bar"/>
					<property id="1" value="true"/>
				</properties>
				<tiles>
					<tile id="tile4" x="0" y="0"/>
					<tile id="tile4" x="64" y="0"/>
				</tiles>
			</group>
			<group id="3" width="16" height="128">
				<properties>
					<property id="0" value="16x128 Bar"/>
					<property id="1" value="true"/>
				</properties>
				<tiles>
					<tile id="tile3" x="0" y="0"/>
					<tile id="tile3" x="0" y="64"/>
				</tiles>
			</group>
			<group id="4" width="48" height="32">
				<properties>
					<property id="0" value="48x32 Block"/>
					<property id="1" value="true"/>
				</properties>
				<tiles>
					<tile id="tile6" x="0" y="0"/>
					<tile id="tile6" x="16" y="0"/>
					<tile id="tile6" x="32" y="0"/>
					<tile id="tile6" x="0" y="16"/>
					<tile id="tile6" x="16" y="16"/>
					<tile id="tile6" x="32" y="16"/>
				</tiles>
			</group>
			<group id="5" width="128" height="32">
				<properties>
					<property id="0" value="128x32 Block"/>
					<property id="1" value="true"/>
				</properties>
				<tiles>
					<tile id="tile5" x="0" y="0"/>
					<tile id="tile5" x="32" y="0"/>
					<tile id="tile5" x="64" y="0"/>
					<tile id="tile5" x="96" y="0"/>
				</tiles>
			</group>
			<group id="6" width="128" height="64">
				<properties>
					<property id="0" value="128x64 Block"/>
					<property id="1" value="true"/>
				</properties>
				<tiles>
					<tile id="tile2" x="0" y="0"/>
					<tile id="tile2" x="64" y="0"/>
				</tiles>
			</group>
			<group id="7" width="128" height="96">
				<properties>
					<property id="0" value="128x96 Block"/>
					<property id="1" value="true"/>
				</properties>
				<tiles>
					<tile id="tile3" x="0" y="32"/>
					<tile id="tile3" x="16" y="32"/>
					<tile id="tile1" x="32" y="0"/>
				</tiles>
			</group>
			<group id="8" width="128" height="128">
				<properties>
					<property id="0" value="128x128 Block"/>
					<property id="1" value="true"/>
				</properties>
				<tiles>
					<tile id="tile2" x="0" y="0"/>
					<tile id="tile2" x="64" y="0"/>
					<tile id="tile2" x="0" y="64"/>
					<tile id="tile2" x="64" y="64"/>
				</tiles>
			</group>
			<group id="9" width="128" height="128">
				<properties>
					<property id="0" value="128x128 Block B"/>
					<property id="1" value="true"/>
				</properties>
				<tiles>
					<tile id="tile5" x="0" y="0"/>
					<tile id="tile5" x="32" y="0"/>
					<tile id="tile5" x="0" y="32"/>
					<tile id="tile5" x="32" y="32"/>
					<tile id="tile2" x="64" y="0"/>
					<tile id="tile2" x="0" y="64"/>
					<tile id="tile5" x="64" y="64"/>
					<tile id="tile5" x="96" y="64"/>
					<tile id="tile5" x="64" y="96"/>
					<tile id="tile5" x="96" y="96"/>
				</tiles>
			</group>
			<group id="10" copyOf="7">
				<properties>
					<property id="0" value="A virtual copy of another group"/>
					<property id="1" value="false"/>
				</properties>
			</group>
		</tileGroups>
	</tileset>
	
</tilesets>
