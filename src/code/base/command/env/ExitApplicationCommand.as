	/**	 * CLI command to exit the application.	 */	public class ExitApplicationCommand extends Command	{		//-----------------------------------------------------------------------------------------		// Properties		//-----------------------------------------------------------------------------------------				private var _stage:Stage;						//-----------------------------------------------------------------------------------------		// Constructor		//-----------------------------------------------------------------------------------------				/**		 * Creates a new instance of the class.		 */		public function ExitApplicationCommand(main:Main = null)		{			if (main) _main = main;		}						//-----------------------------------------------------------------------------------------		// Public Methods		//-----------------------------------------------------------------------------------------				/**		 * Execute the command.		 */ 		override public function execute():void		{			super.execute();						_stage = _main.view.stage;						if (EnvUtil.isPlugin)			{				_main.console.log("Exiting not supported on this runtime.", LogLevel.WARN);				return;			}						CONFIG::IS_DESKTOP_BUILD			{				WindowBoundsManager.instance.storeWindowBounds(_main.baseWindow, "base");			}						_main.console.log("Exiting ...", LogLevel.INFO);			setTimeout(delayedExecute, 100);		}						//-----------------------------------------------------------------------------------------		// Getters & Setters		//-----------------------------------------------------------------------------------------				/**		 * @inheritDoc		 */		override public function get name():String		{			return "appClose";		}						//-----------------------------------------------------------------------------------------		// Private Methods		//-----------------------------------------------------------------------------------------				/**		 * @private		 */		private function delayedExecute():void		{			CONFIG::IS_AIR_BUILD			{				if (NativeWindow.isSupported) _stage.nativeWindow.visible = false;				NativeApplication.nativeApplication.exit();				return;			}						if (EnvUtil.isStandAlone)			{				fscommand("quit");			}		}	}}